#

grepp     () { command grep --exclude-dir=.git -sr "$@"; }
greppy    () { grepp --include='*.py' "$@"; }
greppl    () { grepp -l "$@"; }
greppyl   () { greppy -l "$@"; }
cgrepp    () { grepp --color=always "$@"; }
cgreppy   () { greppy --color=always "$@"; }
cgreppl   () { cgrepp "$@"; }
cgreppyl  () { cgreppy "$@"; }
