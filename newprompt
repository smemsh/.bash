declare -- PS1="\\[\\033[;00;37;40m\\]\\n \$(
rval=\${?}
[[ \$(jobs) ]]
jobsbool=\$?
if   ((rval == 0 && jobsbool == 0)); then printf \"\\[\\033[;00;01;33;40m\\]\"
elif ((rval == 0 && jobsbool == 1)); then printf \"\\[\\033[;00;01;32;40m\\]\"
elif ((rval  > 0 && jobsbool == 0)); then printf \"\\[\\033[;00;01;35;40m\\]\"
elif ((rval  > 0 && jobsbool == 1)); then printf \"\\[\\033[;00;01;31;40m\\]\"
fi
printf %c \\\$
exit \$rval
) \\[\\033[;00;37;40m\\]"
