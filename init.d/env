psetenv SCM			file://$HOME/var/scm

# overridden later if vim found
psetenv VISUAL			vi
psetenv EDITOR			$VISUAL

psetenv PAGER			"less -iR"

psetenv COMP_WORDBREAKS		"${COMP_WORDBREAKS/:/}"
psetenv BLOCK_SIZE		human-readable # df, du, ls
psetenv BC_ENV_ARGS		"-ql $HOME/.bc"

psetenv RI			"-f ansi" # ruby rdoc ri

psetenv LYNX_CFG		$HOME/.lynxrc

psetenv MANPAGER		"${PAGER}s"
psetenv MAN_KEEP_FORMATTING	1 # man-db uses 'col' in pipe, breaks pinfo
psetenv MANWIDTH		80

psetenv CVSROOT			cvs.replaceme.com:/home/sysadmin/cvs
psetenv CVS_RSH			ssh

psetenv PDSH_RCMD_TYPE		ssh
psetenv PDSH_MISC_MODULES	netgroup
psetenv PDSH_SSH_ARGS		"-A"
psetenv SSH_ASKPASS		/bin/true # for pdsh

psetenv NCURSES_NO_PADDING	1
psetenv NCURSES_NO_SETBUF	1

psetenv LESS			"-nSQR#3"

psetenv ORACLE_BASE		/var/oracle
psetenv ORACLE_HOME		/opt/oracle/9i
psetenv ORACLE_OWNER		oracle
psetenv PGUSER			postgres

psetenv LDAPTLS_CACERT		$HOME/.cacerts

